extends layouts/main

block content
  .form-container
    form(action=routes.editVideo(video.id), method='POST')
      input(type='text', placeholder='タイトル', name='title', value=video.title)
      textarea(name='description', placeholder='内容')=video.description
      input(type='submit', value='編集')
    a.form-container__link(href=routes.deleteVideo(video.id))
      button.delete 動画を削除する